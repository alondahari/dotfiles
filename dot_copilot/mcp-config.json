{
  "mcpServers": {
    "kusto": {
      "command": "uvx",
      "args": [
        "microsoft-fabric-rti-mcp"
      ],
      "env": {
        "KUSTO_SERVICE_URI": "https://gh-analytics.eastus.kusto.windows.net",
        "KUSTO_SERVICE_DEFAULT_DB": "hydro"
      },
      "tools": [
        "*"
      ],
      "type": "local",
      "url": "https://gh-analytics.eastus.kusto.windows.net"
    },
    "hubbers-mcp": {
      "command": "uv",
      "args": [
        "--directory",
        "/Users/alondahari/code/work/hubbers-mcp-server",
        "run",
        "hubbers.py"
      ],
      "tools": ["*"]
    },
    "datadog": {
      "type": "http",
      "url": "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp?",
      "headers": {},
      "tools": [
        "*"
      ]
    },
    "splunk": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "SPLUNK_HOST",
        "-e",
        "SPLUNK_PORT",
        "-e",
        "SPLUNK_BEARER_TOKEN",
        "-e",
        "SPLUNK_SCHEME",
        "-e",
        "VERIFY_SSL",
        "-e",
        "FASTMCP_LOG_LEVEL",
        "hashtagchris/splunk-mcp:bearer-token-auth"
      ],
      "env": {
        "SPLUNK_HOST": "splunkazure-api.service.azure-eastus.github.net",
        "SPLUNK_PORT": "443",
        "SPLUNK_BEARER_TOKEN": "${SPLUNK_BEARER_TOKEN}",
        "SPLUNK_SCHEME": "https",
        "VERIFY_SSL": "true",
        "FASTMCP_LOG_LEVEL": "DEBUG"
      },
      "tools": ["*"]
    }
  }
}
